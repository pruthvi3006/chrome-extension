{
  "manifest_version": 3,
  "name": "Skynet Side Panel",
  "version": "1.0",
  "description": "React-based full-page side panel with draggable launcher",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["index.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["iframe.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"]
}
