{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"]

  },
  "include": ["src"]
}